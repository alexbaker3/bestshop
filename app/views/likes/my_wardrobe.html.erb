<div class="page-header">
  My Wardrobe
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Price</th>
        <th>Brand</th>
        <th>Retailer</th>
        <th>Actions</th>
      </tr>

      <% current_user.likes.each do |like| %>
      <tr>
        <td><%= like.product.name %></td>
        <td><a href="/products/<%= like.product.id %>">
          <img src="<%= like.product.image %>" class="img-responsive"></a></td>
        <td><%= like.product.price %></td>
        <td><%= like.product.brand %></td>
        <td><%= like.product.retailer %></td>
        <td>
          <a href="/products/<%= like.product.id %>" class="btn btn-primary">Show</a>
          <a href="<%= like.product.link %>" class="btn btn-warning">Buy</a>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
