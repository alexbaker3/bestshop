<div class="page-header">
  <h3><%= @product.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt>Image</dt>
      <dd><a href="/products/<%= @product.id %>">
      <img src="<%= @product.image %>" class="img-responsive">
      </a></dd>

      <dt>Description</dt>
      <dd><%= @product.description %></dd>

      <dt>Link</dt>
      <dd><a href= "<%= @product.link %>"><%= @product.link %></a></dd>

      <dt>Price</dt>
      <dd><%= @product.price %></dd>

      <dt>Brand</dt>
      <dd><%= @product.brand %></dd>

      <dt>Retailer</dt>
      <dd><%= @product.retailer %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/products" class="btn btn-primary">
        Back
      </a>
      <a href="/products/<%= @product.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_product/<%= @product.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
