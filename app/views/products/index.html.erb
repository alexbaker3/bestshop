<div class="page-header">
  <h1>
    Products
    <a href="/products/new" class="btn btn-lg btn-success">New Product</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Description</th>
        <th>Link</th>
        <th>Price</th>
        <th>Brand</th>
        <th>Retailer</th>
        <th>Actions</th>
      </tr>

      <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><a href="/products/<%= product.id %>">
        <img src="<%= product.image %>" class="img-responsive">
        </a>
        </td>
        <td><%= product.description %></td>
        <td><a href= "<%= product.link %>"><%= product.link %></a></td>
        <td><%= product.price %></td>
        <td><%= product.brand %></td>
        <td><%= product.retailer %></td>
        <td>
          <a href="/products/<%= product.id %>" class="btn btn-primary">Show</a>
          <a href="/products/<%= product.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_product/<%= product.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
